{% extends 'layout.twig' %}

{% block title %}Welcome - Ticket Management System{% endblock %}

{% block body_class %}min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100{% endblock %}

{% block content %}
  <div class="relative min-h-screen overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute top-20 right-10 w-32 h-32 bg-gradient-to-br from-blue-400/30 to-purple-500/30 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-20 left-10 w-24 h-24 bg-gradient-to-br from-pink-400/20 to-purple-500/20 rounded-full blur-lg animate-bounce" style="animation-duration: 3s;"></div>
    <div class="absolute top-1/2 left-1/2 w-16 h-16 bg-gradient-to-br from-blue-500/25 to-cyan-400/25 rounded-full blur-md animate-pulse" style="animation-delay: 1s;"></div>

    <!-- Hero section with enhanced wave -->
    <div class="relative wave-bg pb-40">
      <!-- subtle dark overlay for readable white text -->
      <div class="absolute inset-0 bg-black/40 backdrop-blur-sm z-0"></div>
      <div class="pt-36 pb-48 px-4 text-center relative z-10">
        <div class="mx-auto max-w-3xl animate-fadeInUp">
          <!-- contrast panel so white text is always visible -->
          <div class="inline-block bg-black/45 backdrop-blur-md rounded-2xl p-8">
            <h1 class="text-5xl md:text-6xl font-bold mb-6 text-red" style="text-shadow: 0 6px 18px rgba(0,0,0,0.7);">
              Ticket Management System
            </h1>
            <p class="text-lg md:text-xl text-white-100 mb-6 max-w-3xl mx-auto leading-relaxed font-medium">
              Streamline support workflows â€” create, assign and resolve tickets with clarity.
            </p>

            <div class="flex justify-center gap-6 flex-wrap mt-4 mx-5">
              <a href="{{ path('login') }}" class="btn btn-primary transform hover:scale-105 px-8 py-3 text-lg m-5">
                Login
              </a>
              <a href="{{ path('register') }}" class="btn btn-outline transform hover:scale-105 px-8 py-3 text-lg">
                Get Started
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced feature boxes (reduced overlap) -->
    <div class="mx-auto max-w-container px-6 -mt-20 mb-20">
      <div class="grid md:grid-cols-3 gap-8">
        {% for feature in features %}
          <div class="card" style="text-align: center; padding: 1.5rem;">
            <div style="font-size: 2.25rem; margin-bottom: 1rem;">{{ feature.icon }}</div>
            <h3 style="color: #0f172a; margin-bottom: 0.5rem;">{{ feature.title }}</h3>
            <p style="color: #475569;">{{ feature.description }}</p>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Call to action section -->
    <div class="px-4 pb-16">
      <div class="card text-center max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold mb-4" style="background: linear-gradient(90deg,#2563eb,#7c3aed); -webkit-background-clip: text; color: transparent;">
          Ready to get started?
        </h2>
        <p class="text-muted mb-6">Join teams who manage support efficiently with our platform.</p>
        <a href="{{ path('register') }}" class="btn btn-primary">Create Your Account</a>
      </div>
    </div>
  </div>
{% endblock %}