{% extends 'layout.twig' %}

{% block title %}Tickets - Ticket Management System{% endblock %}

{% block content %}
  <div class="py-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
      <h1 class="text-3xl font-bold">Tickets</h1>

      <div class="flex flex-wrap gap-4">
        <select name="status" class="border rounded px-3 py-2">
          <option value="all" {% if filters.status == 'all' %}selected{% endif %}>All Status</option>
          <option value="open" {% if filters.status == 'open' %}selected{% endif %}>Open</option>
          <option value="in_progress" {% if filters.status == 'in_progress' %}selected{% endif %}>In Progress</option>
          <option value="closed" {% if filters.status == 'closed' %}selected{% endif %}>Closed</option>
        </select>

        <input
          type="text"
          name="search"
          placeholder="Search tickets..."
          value="{{ filters.search|default('') }}"
          class="border rounded px-3 py-2 flex-1"
        />

        <a href="{{ path('ticket_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
          Create New Ticket
        </a>
      </div>
    </div>

    <div class="grid gap-4">
      {% for ticket in tickets %}
        <div class="bg-white rounded-lg shadow p-6 card">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
              <a href="{{ path('ticket_detail', {id: ticket.id}) }}" class="no-underline" style="color: #0f172a; font-weight: 600;">
                {{ ticket.title }}
              </a>
              <div class="text-muted">{{ ticket.description }}</div>
            </div>
            <div>
              <span class="badge
                {% if ticket.status == 'open' %}badge-open
                {% elseif ticket.status == 'in_progress' %}badge-in-progress
                {% else %}badge-closed{% endif %}">
                {{ ticket.status|replace({'_': ' '}) }}
              </span>
            </div>
          </div>
        </div>
      {% endfor %}

      {% if tickets is empty %}
        <div class="text-muted center card">No tickets found</div>
      {% endif %}
    </div>
  </div>
{% endblock %}